<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:id="@+id/setting_details_parent">

    <ScrollView
        android:id="@+id/setting_details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/setting_details_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="5"
            android:fontFamily="monospace"
            android:text="Location: settings > setting details"
            android:textAlignment="textStart"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="15"
            android:background="@android:color/holo_orange_dark"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setting_details_location_text">

            <Button
                android:id="@+id/settings_list_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@android:color/white"
                android:text="Settings list"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/settings_add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@android:color/white"
                android:text="Add setting"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:indeterminateTint="@android:color/holo_orange_dark"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/setting_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone"
            android:weightSum="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/setting_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Setting details"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                android:paddingVertical="5dp"
                android:text="Code:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_details_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHighlight="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark"
                android:textCursorDrawable="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                android:paddingVertical="5dp"
                android:text="Name:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/setting_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                android:textColorHighlight="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark"
                android:textCursorDrawable="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/textView_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                android:paddingVertical="5dp"
                android:text="Description:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/setting_details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Description"
                android:inputType="text"
                android:textColorHighlight="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark"
                android:textCursorDrawable="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/textView_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                android:paddingVertical="5dp"
                android:text="Type:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/setting_details_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Type"
                android:inputType="text"
                android:textColorHighlight="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark"
                android:textCursorDrawable="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/textView_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                android:paddingVertical="5dp"
                android:text="Value:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/setting_details_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Value"
                android:inputType="text"
                android:textColorHighlight="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark"
                android:textCursorDrawable="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/textView_createdat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                android:paddingVertical="5dp"
                android:text="Created at:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_details_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHighlight="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark"
                android:textCursorDrawable="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/textView_updatedat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                android:paddingVertical="5dp"
                android:text="Updated at:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_details_updated_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHighlight="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark"
                android:textCursorDrawable="@android:color/holo_orange_dark" />


            <TextView
                android:id="@+id/textView_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                android:paddingVertical="5dp"
                android:text="Status:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_details_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/white"
                android:paddingVertical="5dp"
                android:text="ACTIVE"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Button
                android:id="@+id/modify_setting_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:shadowRadius="2"
                android:text="Modify" />

            <Button
                android:id="@+id/remove_setting_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:shadowRadius="2"
                android:text="Remove" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>